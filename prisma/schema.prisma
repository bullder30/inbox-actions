// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

enum ActionType {
  SEND
  CALL
  FOLLOW_UP
  PAY
  VALIDATE
}

enum EmailStatus {
  EXTRACTED // Email synchronisé, métadonnées extraites
  ANALYZED  // Email analysé pour extraction d'actions
}

enum EmailProvider {
  GMAIL           // @deprecated - Utiliser IMAP à la place (CASA non requis)
  IMAP            // IMAP générique (Gmail, Yahoo, iCloud, etc.)
  MICROSOFT_GRAPH // Microsoft Graph API (Outlook, Hotmail, Live, M365)
}

enum IMAPAuthMethod {
  PASSWORD // App Password (traditional IMAP auth)
  OAUTH    // OAuth2 / XOAUTH2 (Microsoft, Google)
}

enum ActionStatus {
  TODO
  DONE
  IGNORED
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?
  createdAt         DateTime @default(now()) @map(name: "created_at")
  updatedAt         DateTime @default(now()) @map(name: "updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map(name: "accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map(name: "sessions")
}

model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Hashed password for credentials auth
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @default(now()) @map(name: "updated_at")
  role          UserRole  @default(USER)

  accounts Account[]
  sessions Session[]
  actions  Action[]
  emailMetadata EmailMetadata[]

  stripeCustomerId       String?   @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId   String?   @unique @map(name: "stripe_subscription_id")
  stripePriceId          String?   @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime? @map(name: "stripe_current_period_end")

  // Email provider preference (nullable - null means no provider configured)
  emailProvider           EmailProvider? @map(name: "email_provider")

  // Universal sync timestamp (used by all providers)
  lastEmailSync           DateTime? @map(name: "last_email_sync")

  // Microsoft Graph delta link (for incremental sync)
  microsoftDeltaLink      String?   @db.Text @map(name: "microsoft_delta_link")

  // Notification preferences
  emailNotifications   Boolean   @default(true) @map(name: "email_notifications")
  lastNotificationSent DateTime? @map(name: "last_notification_sent")
  syncEnabled          Boolean   @default(true) @map(name: "sync_enabled")

  // IMAP credentials
  imapCredentials IMAPCredential[]

  @@map(name: "users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map(name: "verification_tokens")
}

model Action {
  id               String       @id @default(cuid())
  userId           String
  title            String
  type             ActionType
  status           ActionStatus @default(TODO)
  dueDate          DateTime?
  sourceSentence   String       @db.Text
  emailFrom        String
  emailReceivedAt  DateTime
  gmailMessageId   String?      @map(name: "gmail_message_id") // ID du message (Gmail ou Graph)
  imapUID          BigInt?      @map(name: "imap_uid") // UID IMAP
  emailWebUrl      String?      @map(name: "email_web_url") // URL vers l'email dans le webmail
  createdAt        DateTime     @default(now()) @map(name: "created_at")
  updatedAt        DateTime     @default(now()) @updatedAt @map(name: "updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([type])
  @@index([dueDate])
  @@map(name: "actions")
}

// Stockage minimal des métadonnées d'emails (RGPD compliant)
model EmailMetadata {
  id             String   @id @default(cuid())
  userId         String

  // Source provider
  emailProvider  EmailProvider @default(GMAIL) @map(name: "email_provider")

  // Gmail identifiers (optional for IMAP)
  gmailMessageId String?  @map(name: "gmail_message_id") // Gmail internal ID
  gmailThreadId  String?  @map(name: "gmail_thread_id")  // Gmail thread ID

  // IMAP identifiers (optional for Gmail)
  imapUID        BigInt?  @map(name: "imap_uid")        // IMAP UID
  imapMessageId  String?  @map(name: "imap_message_id") // Message-ID header

  // Métadonnées minimales
  from           String   // Expéditeur
  subject        String?  // Sujet (peut être null)
  snippet        String   @db.Text // Extrait court (max 200 caractères selon Gmail API)
  receivedAt     DateTime @map(name: "received_at") // Date de réception

  // Labels Gmail (stockés en JSON array)
  labels         String[] @default([])

  // URL vers l'email dans le webmail (Microsoft Graph fournit webLink)
  webUrl         String?  @map(name: "web_url")

  // Gestion du statut
  status         EmailStatus @default(EXTRACTED) // EXTRACTED -> ANALYZED
  createdAt      DateTime    @default(now()) @map(name: "created_at")
  updatedAt      DateTime    @default(now()) @updatedAt @map(name: "updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, gmailMessageId])
  @@unique([userId, imapUID])
  @@index([userId])
  @@index([gmailMessageId])
  @@index([imapUID])
  @@index([receivedAt])
  @@index([status])
  @@map(name: "email_metadata")
}

// Credentials IMAP (chiffrées)
model IMAPCredential {
  id              String   @id @default(cuid())
  userId          String

  // Configuration IMAP
  imapHost        String   @map(name: "imap_host")     // ex: "imap.gmail.com"
  imapPort        Int      @default(993) @map(name: "imap_port")
  imapUsername    String   @map(name: "imap_username") // Email ou username IMAP
  imapPassword    String?  @db.Text @map(name: "imap_password") // Chiffré AES-256 (App Password) - null for OAuth

  // Authentication method
  authMethod      IMAPAuthMethod @default(PASSWORD) @map(name: "auth_method")

  // Configuration
  imapFolder      String   @default("INBOX") @map(name: "imap_folder")
  useTLS          Boolean  @default(true) @map(name: "use_tls")

  // Tracking synchronisation
  lastIMAPSync    DateTime? @map(name: "last_imap_sync")
  lastUID         BigInt?   @map(name: "last_uid") // Dernier UID synchronisé

  // Status connexion
  isConnected     Boolean  @default(false) @map(name: "is_connected")
  connectionError String?  @map(name: "connection_error")
  lastErrorAt     DateTime? @map(name: "last_error_at")

  createdAt       DateTime @default(now()) @map(name: "created_at")
  updatedAt       DateTime @default(now()) @updatedAt @map(name: "updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, imapHost, imapUsername])
  @@index([userId])
  @@index([isConnected])
  @@map(name: "imap_credentials")
}
